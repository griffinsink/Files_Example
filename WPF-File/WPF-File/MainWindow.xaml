<Window x:Class="WPF_File.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_File"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Select a File:" HorizontalAlignment="Left" Margin="41,31,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtFilePath" HorizontalAlignment="Left" Height="39" Margin="136,35,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="323" IsEnabled="False"/>
        <Button x:Name="btnSelectFile" Content="Select File" HorizontalAlignment="Left" Margin="486,37,0,0" VerticalAlignment="Top" Width="83" Click="Button_Click" Height="21"/>
        <TextBlock x:Name="txtOutPut" HorizontalAlignment="Left" Margin="10,207,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="202" Width="772"/>
        <Button x:Name="btnReadFile" Content="Read File" HorizontalAlignment="Left" Margin="630,37,0,0" VerticalAlignment="Top" Width="78" Height="21" Click="btnReadFile_Click"/>

    </Grid>
</Window>
